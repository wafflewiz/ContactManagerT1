@model List<Contact>
@{
    ViewData["Title"] = "Contact Manager";
}

<div class="text-center bg-dark text-white p-3 mb-3">
    <h2>@ViewData["Title"]</h2>
</div>

<p>
    <a asp-action="Create" class="btn btn-link">Add Contact</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>
                <a asp-controller="Contact" asp-action="Edit"
                   asp-route-id="@contact.Id">Edit</a>
                <a asp-controller="Contact" asp-action="Delete"
                   asp-route-id="@contact.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
